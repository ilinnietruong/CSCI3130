<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:id="@+id/MedName_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text=""
        android:textColor="@color/colorMedName"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/MedDosage_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text=""
        android:textColor="@color/colorMedDetails"
        android:textSize="16sp"
        />


    <TextView
        android:id="@+id/MedDailyTime_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textColor="@color/colorMedDetails"
        android:textSize="16sp"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/MedDayOfWeek_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textColor="@color/colorMedDetails"
        android:textSize="16sp"
        android:visibility="gone"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/medEdit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="120sp"
            android:layout_marginLeft="120sp"
            android:layout_marginEnd="71dp"
            android:layout_marginRight="71dp"
            android:background="@color/medOptionButtons"
            android:text="@string/medEdit"
            android:textColor="@color/colorDefault"
            android:visibility="gone"
            />

        <Button
            android:id="@+id/medDelete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="16sp"
            android:background="@color/medOptionButtons"
            android:text="@string/medDelete"
            android:textColor="@color/colorDefault"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="16sp"
            android:visibility="gone"
            />

    </RelativeLayout>


</LinearLayout>
