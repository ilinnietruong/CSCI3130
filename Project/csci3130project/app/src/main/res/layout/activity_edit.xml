<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".editActivity">


        <EditText
            android:id="@+id/medEditName"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="16dp"
            android:inputType="textPersonName"
            android:hint="@string/enter_name"/>

        <EditText
            android:id="@+id/medEditDosage"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="12dp"
            android:inputType="textPersonName"
            android:hint="@string/enter_dosageAmt"/>

        <EditText
            android:id="@+id/medEditTime"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="12dp"
            android:inputType="textPersonName"
            android:hint="@string/enter_time_of_day"/>

        <EditText
            android:id="@+id/medEditDay"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="12dp"
            android:inputType="textPersonName"
            android:hint="@string/enter_day_of_week"/>

        <RelativeLayout
            android:id="@+id/buttons"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            >

            <Button
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="71dp"
                android:layout_marginRight="71dp"
                android:layout_marginBottom="124dp"
                android:background="#535050"
                android:text="Back"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="42dp"
                android:layout_marginRight="42dp"
                android:layout_marginBottom="125dp"
                android:layout_toStartOf="@+id/backButton"
                android:layout_toLeftOf="@+id/backButton"
                android:background="#535050"
                android:text="Save"
                android:textColor="#FFFFFF" />
        </RelativeLayout>
    </LinearLayout>

